#Q.1
/* redirect_stdout.c */
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>

int main() {
    int fd = open("output.txt", O_CREAT | O_WRONLY | O_TRUNC, 0644);
    if (fd < 0) {
        perror("open");
        return 1;
    }

    // Redirect stdout to file
    if (dup2(fd, STDOUT_FILENO) < 0) {
        perror("dup2");
        return 1;
    }

    close(fd); // fd no longer needed

    // All printf output now goes to output.txt
    printf("This line is redirected to output.txt\n");
    printf("Hello World via file redirection!\n");

    return 0;
}
#Q.2
/* ls_wc_pipe.c */
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    int fd[2];
    if (pipe(fd) == -1) {
        perror("pipe");
        return 1;
    }

    pid_t pid1 = fork();
    if (pid1 == 0) {
        // First child: ls -l
        close(fd[0]);        // close read end
        dup2(fd[1], STDOUT_FILENO); // stdout -> pipe write
        close(fd[1]);
        execlp("ls", "ls", "-l", NULL);
        perror("execlp ls");
        exit(1);
    }

    pid_t pid2 = fork();
    if (pid2 == 0) {
        // Second child: wc -l
        close(fd[1]);        // close write end
        dup2(fd[0], STDIN_FILENO); // stdin <- pipe read
        close(fd[0]);
        execlp("wc", "wc", "-l", NULL);
        perror("execlp wc");
        exit(1);
    }

    // Parent closes both ends
    close(fd[0]);
    close(fd[1]);

    // Wait for both children
    wait(NULL);
    wait(NULL);

    return 0;
}
