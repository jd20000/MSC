// Q1: Demonstrate redirection of standard output to a file
#include <stdio.h>

int main() {
    FILE *fp;
    fp = freopen("output.txt", "w", stdout); // Redirect stdout to output.txt

    if (fp == NULL) {
        perror("freopen failed");
        return 1;
    }

    printf("This text is written to output.txt instead of the terminal.\n");
    printf("Standard output has been successfully redirected!\n");

    fclose(fp);
    return 0;
}


// Q2: Redirect stdout to file using dup() and open() system calls
#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>

int main() {
    int fd;

    // Open output.txt (create if not exists, truncate existing)
    fd = open("output.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);

    if (fd < 0) {
        perror("open failed");
        return 1;
    }

    // Duplicate fd into standard output (stdout = 1)
    dup2(fd, STDOUT_FILENO);
    close(fd);

    // Now all printf() output goes to output.txt
    printf("This line will be written to output.txt using dup2 and open.\n");
    printf("Redirection successful using system calls.\n");

    return 0;
}
